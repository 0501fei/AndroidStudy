<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aidl.BinderTestActivity">

    <Button
        android:id="@+id/btn_binder_start"
        style="@style/btn_style_lower"
        android:text="启动服务"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_binder_bind"
        style="@style/btn_style_lower"
        android:text="绑定服务"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_binder_start" />

    <Button
        android:id="@+id/btn_binder_unbind"
        style="@style/btn_style_lower"
        android:text="解绑服务"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_binder_bind" />

    <Button
        android:id="@+id/btn_binder_stop"
        style="@style/btn_style_lower"
        android:text="结束服务"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_binder_unbind" />

</androidx.constraintlayout.widget.ConstraintLayout>